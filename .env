# Database Configuration
DB_HOST=localhost
DB_NAME=veterinary_ims
DB_USER=root
DB_PASS=

# Application Configuration
APP_NAME=Veterinary IMS
APP_URL=http://localhost/v-ims
BASE_URL=/v-ims/
DEBUG_MODE=true

# Security Configuration
SECRET_KEY=your-secret-key-here
CSRF_PROTECTION=true
SESSION_TIMEOUT=3600
PASSWORD_MIN_LENGTH=6

# File Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif
ALLOWED_DOC_TYPES=pdf,doc,docx
UPLOAD_PATH=public/uploads

# Email Configuration
EMAIL_FROM=noreply@veterinary-system.com
EMAIL_FROM_NAME=Veterinary System
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# SMS Configuration
SMS_GATEWAY_URL=
SMS_API_KEY=

# System Configuration
TIMEZONE=Africa/Blantyre
ENABLE_LOGGING=true
LOG_LEVEL=DEBUG

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_SMS_REMINDERS=false