# .env

# Database Configuration
DB_HOST=localhost
DB_NAME=veterinary_system
DB_USER=root
DB_PASS=

# Application Settings
APP_NAME=Veterinary Health Management System
APP_VERSION=1.0.0
APP_URL=http://localhost/veterinary-system
BASE_URL=/veterinary-system/

# Email Settings
EMAIL_FROM=noreply@veterinary-system.com
EMAIL_FROM_NAME=Veterinary System
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# SMS Settings
SMS_GATEWAY_URL=http://sms-gateway.api
SMS_API_KEY=your-sms-api-key

# Security Settings
SESSION_TIMEOUT=3600
PASSWORD_MIN_LENGTH=6
ENABLE_CSRF=true

# Debug Settings
DEBUG_MODE=true
ENABLE_LOGGING=true

# File Upload Settings
MAX_FILE_SIZE=5242880
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif
ALLOWED_DOC_TYPES=pdf,doc,docx

# Timezone
TIMEZONE=Africa/Blantyre